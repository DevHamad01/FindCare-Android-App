<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBookAppointment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header: Text Left, Content Right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                         <ImageView
                            android:id="@+id/btnBack"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_revert"
                            android:contentDescription="Back"
                            android:layout_marginBottom="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:gravity="center"
                             android:background="@drawable/bg_input_rounded"
                             android:paddingHorizontal="8dp"
                             android:paddingVertical="4dp"
                             android:layout_marginEnd="8dp">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="â­"
                                 android:textSize="12sp"
                                 android:layout_marginEnd="4dp"/>
                             <TextView
                                 android:id="@+id/tvHeaderRating"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="4.5"
                                 android:textStyle="bold"
                                 android:textColor="@color/textColorPrimary"
                                 android:textSize="12sp"/>
                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:gravity="center"
                             android:background="@drawable/bg_input_rounded"
                             android:paddingHorizontal="8dp"
                             android:paddingVertical="4dp">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="ðŸ’²"
                                 android:textSize="12sp"
                                 android:layout_marginEnd="4dp"/>
                             <TextView
                                 android:id="@+id/tvHeaderPrice"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="$20/hr"
                                 android:textStyle="bold"
                                 android:textColor="@color/textColorPrimary"
                                 android:textSize="12sp"/>
                         </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/tvSpecialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDoctor"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/doctor"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_input_rounded"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="16dp"
                android:background="@drawable/bg_input_rounded">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvExp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Yrs"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3000+"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patients"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tabAbout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:id="@+id/tabReviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reviews"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondary"/>
                
                <TextView
                    android:id="@+id/tabAvailability"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Availability"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/textColorSecondary"/>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Content Container: About -->
            <LinearLayout
                android:id="@+id/layoutAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About the doctor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A highly skilled medical professional with extensive experience in diagnosing and treating patients. Committed to providing compassionate care and improving patient outcomes."
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Content Container: Reviews -->
            <LinearLayout
                android:id="@+id/layoutReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews &amp; Ratings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"/>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"/>
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:layout_marginStart="16dp">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="â­â­â­â­â­"
                             android:textSize="16sp"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Overall Rating"
                             android:textColor="@color/textColorSecondary"/>
                     </LinearLayout>
                 </LinearLayout>
                 
                 <LinearLayout
                     android:id="@+id/containerReviews"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- Content Container: Availability -->
            <HorizontalScrollView
                android:id="@+id/layoutAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:scrollbars="none">
                
                <LinearLayout
                    android:id="@+id/containerAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"/>
            </HorizontalScrollView>
            
            <TextView
                android:id="@+id/tvAvailabilityHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black dates are already booked. White dates are available."
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBookAppointment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book Appointment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:textSize="18sp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
